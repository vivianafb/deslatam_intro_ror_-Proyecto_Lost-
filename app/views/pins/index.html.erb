<p id="notice"><%= notice %></p>

<h1>Crea un pin</h1>

<table>


  <thead>
    <tr>
      <th>Photo</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
    
 
      <tr class="thumbnail">
        <td><%= pin.name %></td>
        <td><%= image_tag(pin.photo, :class => 'img-responsive')%></td>
        <td><%= pin.description %></td>
        <div class="buttons">
            <td><%= link_to 'Show', pin, :class =>'btn' %></td>
            <td><%= link_to 'Edit', edit_pin_path(pin), :class =>'btn' %></td>
            <% if user_signed_in? %>
              <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } , :class =>'btn'%></td>
            <% end %>
         </div>
      </tr>

    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Pin', new_pin_path %>
<% end %>